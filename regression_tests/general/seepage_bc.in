SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE GENERAL
    /
  /
END

SUBSURFACE

#=========================== numerical methods ================================
NUMERICAL_METHODS FLOW
  LINEAR_SOLVER
    SOLVER DIRECT
  /
END

#=========================== regression =======================================
REGRESSION
  CELLS_PER_PROCESS 5
END

#=========================== discretization ===================================
GRID
  TYPE STRUCTURED
  NXYZ 1 1 4
  BOUNDS
    0.d0 0.d0 0.d0
    1.d0 1.d0 2.d0
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  DIFFUSION_COEFFICIENT 1.d-9
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  POROSITY 0.25d0
  TORTUOSITY 1.d0
  ROCK_DENSITY 2650.d0
  ! completely unrealistic thermal conductivities for testing only
  THERMAL_CONDUCTIVITY_DRY 0.005d0
  THERMAL_CONDUCTIVITY_WET 0.02d0
  HEAT_CAPACITY 830.d0
  PERMEABILITY
    PERM_ISO 1.d-12
  /
  CHARACTERISTIC_CURVES cc1
END

#=========================== saturation functions =============================
CHARACTERISTIC_CURVES cc1
  SATURATION_FUNCTION VAN_GENUCHTEN
    LIQUID_RESIDUAL_SATURATION 0.1d0
    ALPHA 1.d-4
    M 0.5d0
  /
  PERMEABILITY_FUNCTION MUALEM
    LIQUID_RESIDUAL_SATURATION 0.1d0
    M 0.5d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_GAS
    LIQUID_RESIDUAL_SATURATION 0.1d0
    GAS_RESIDUAL_SATURATION 0.1d0
    M 0.5d0
  /
END

#=========================== output options ===================================
OUTPUT
  TIMES y 0.01 0.1 1 
  PERIODIC_OBSERVATION TIMESTEP 1
  VARIABLES
    TEMPERATURE
    LIQUID_PRESSURE
    LIQUID_SATURATION
    LIQUID_DENSITY
    LIQUID_ENERGY
    THERMODYNAMIC_STATE
  /
  MASS_BALANCE
  VELOCITY_AT_CENTER
  PRINT_COLUMN_IDS
END

#=========================== times ============================================
TIME
  FINAL_TIME 5.d0 y
  INITIAL_TIMESTEP_SIZE 1.d0 h
  MAXIMUM_TIMESTEP_SIZE 2.5d-1 y
END

#=========================== regions ==========================================
REGION all
  INFINITE
END

REGION top
  FACE TOP
  COORDINATES
    0.d0 0.d0 2.d0
    1.d0 1.d0 2.d0
  /
END

OBSERVATION
  REGION top
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial_pressure
  TYPE
    GAS_PRESSURE DIRICHLET
    GAS_SATURATION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  GAS_PRESSURE 1.d5
  GAS_SATURATION 0.01d0
  TEMPERATURE 24.d0
END

FLOW_CONDITION seepage
  TYPE
    GAS_PRESSURE DIRICHLET_SEEPAGE
    GAS_SATURATION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  GAS_PRESSURE 1.d5
  GAS_SATURATION 1.d0
  TEMPERATURE 14.d0
END

FLOW_CONDITION recharge
  TYPE
    LIQUID_FLUX neumann
    GAS_FLUX neumann
    TEMPERATURE DIRICHLET
  /
  LIQUID_FLUX 0.01d0 m/y
  GAS_FLUX 0.d0 m/y
  TEMPERATURE 10.d0
END

#=========================== condition couplers ===============================
INITIAL_CONDITION
  FLOW_CONDITION initial_pressure
  REGION all
END

BOUNDARY_CONDITION recharge
  FLOW_CONDITION recharge
  REGION top
END

BOUNDARY_CONDITION seepage
  FLOW_CONDITION seepage
  REGION top
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

END_SUBSURFACE
