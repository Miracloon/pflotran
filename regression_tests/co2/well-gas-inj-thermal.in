SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE SCO2
    END

    WELL_MODEL well
      TYPE HYDROSTATIC
    END

  END
END

SUBSURFACE

REGRESSION
  CELL_IDS
    1
    4
  /
END

WELLBORE_MODEL well1

  WELL_GRID
    NUMBER_OF_SEGMENTS 4
    WELL_TRAJECTORY
      # Must start from SURFACE_ORIGIN and proceed sequentially.
      # Will populate 1 well segment per reservoir cell occupied
      # Must specify if each segment is CASED or UNCASED
      SURFACE_ORIGIN 5.d0 5.d0 2.d2
      SEGMENT_DXYZ CASED 0.d0 0.d0 -149.d0
      SEGMENT_DXYZ UNCASED 0.d0 0.d0 -51.d0
    /
  /

  WELL
    DIAMETER 0.16d0
    FRICTION_COEFFICIENT 1.d0
    SKIN_FACTOR 0.d0
    WELL_INDEX_MODEL PEACEMAN_3D
  /

  FRACTURE_PRESSURE 1.5d7
  MINIMUM_PRESSURE 1.d6

  USE_WELL_COUPLER

END

# This will create output in snapshot and observation files.
# Outside of the well region, the values will read -999
WELL_MODEL_OUTPUT
  WELL_LIQ_PRESSURE
  WELL_GAS_PRESSURE
  WELL_LIQ_Q
  WELL_GAS_Q
/

NUMERICAL_METHODS flow

  NEWTON_SOLVER
    USE_INFINITY_NORM_CONVERGENCE
    NUMERICAL_JACOBIAN
    MINIMUM_NEWTON_ITERATIONS 2
    CONVERGE_ON_WELL_RESIDUAL
  END

  LINEAR_SOLVER
    SOLVER DIRECT
  END

  TIMESTEPPER FLOW
    #PRESSURE_CHANGE_GOVERNOR 1.d9
    TIMESTEP_MAXIMUM_GROWTH_FACTOR 1.2
  END

END

#=========================== discretization ===================================
GRID
  TYPE STRUCTURED CARTESIAN
  NXYZ 1 1 4
  DXYZ
    1@10.d0
    1@10.d0
    4@50.d0
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  PHASE LIQUID
  DIFFUSION_COEFFICIENT 2.d-9
END

FLUID_PROPERTY
  PHASE GAS
  DIFFUSION_COEFFICIENT 2.d-5
END

#=========================== more fluid properties ============================
EOS WATER
  DENSITY IF97
  ENTHALPY IF97
  STEAM_DENSITY IF97
  STEAM_ENTHALPY IF97
  SATURATION_PRESSURE IF97
END

EOS GAS
  CO2_DATABASE co2_sw.dat
END


#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  CHARACTERISTIC_CURVES default
  POROSITY 0.12
  TORTUOSITY 1.d0
  ROCK_DENSITY 2650.d0
  THERMAL_CONDUCTIVITY_DRY 2.d0 #W/m-C
  THERMAL_CONDUCTIVITY_WET 2.18d0 #W/m-C
  HEAT_CAPACITY 1000 J/kg-C
  PERMEABILITY
    PERM_ISO 1.d-13
  /
  # Need fractional length (0.8) and fractional critical
  # porosity (0.8)
  SOIL_COMPRESSIBILITY_FUNCTION LINEAR
  SOIL_COMPRESSIBILITY 4.5d-10
  SOIL_REFERENCE_PRESSURE 1.d7
END

MATERIAL_PROPERTY impermeable
  ID 2
  CHARACTERISTIC_CURVES default
  POROSITY 0.d0 #0.12
  TORTUOSITY 0.d0
  ROCK_DENSITY 2650.d0
  THERMAL_CONDUCTIVITY_DRY 2.d0 #W/m-C
  THERMAL_CONDUCTIVITY_WET 2.18d0 #W/m-C
  HEAT_CAPACITY 1000 J/kg-C
  PERMEABILITY
    PERM_ISO 1.d-40
  /
  # Need fractional length (0.8) and fractional critical
  # porosity (0.8)
  SOIL_COMPRESSIBILITY_FUNCTION LINEAR
  SOIL_COMPRESSIBILITY 4.5d-10
  SOIL_REFERENCE_PRESSURE 1.d7 
END


#=========================== characteristic curves ============================

CHARACTERISTIC_CURVES default
  SATURATION_FUNCTION VG_STOMP
    N 1.84162
    OVEN_DRIED_CAP_HEAD 102108.2d0
    ALPHA 5.d-1
    LIQUID_RESIDUAL_SATURATION 0.d0
    MAX_TRAPPED_GAS_SAT 0.d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    PHASE LIQUID
    M 0.457
    LIQUID_RESIDUAL_SATURATION 0.3
  /
  PERMEABILITY_FUNCTION MODIFIED_COREY_GAS
    PHASE GAS
    LIQUID_RESIDUAL_SATURATION 0.3
    GAS_RESIDUAL_SATURATION 0.05
  /
END

#=========================== output options ===================================
OUTPUT
  VARIABLES
   THERMODYNAMIC_STATE
   TEMPERATURE
   LIQUID_PRESSURE
   GAS_PRESSURE
   LIQUID_SATURATION
   GAS_SATURATION
   PRECIPITATE_SATURATION
   LIQUID_MASS_FRACTIONS
   LIQUID_MOLE_FRACTIONS
   GAS_MASS_FRACTIONS
   LIQUID_DENSITY
   GAS_DENSITY
   PERMEABILITY
   LIQUID_RELATIVE_PERMEABILITY
   GAS_RELATIVE_PERMEABILITY
   POROSITY
  /
END

#=========================== times ============================================
TIME
  FINAL_TIME 8.64000E+06 s
  INITIAL_TIMESTEP_SIZE 1.d4 s
  MAXIMUM_TIMESTEP_SIZE 8.64000E+05 s
END


#=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    1.d5 1.d5 1.d5
  /
END

REGION well
  COORDINATES
    0.d0 0.d0 0.d0
    1.d1 1.d1 200.d0
  /
END

REGION top
  FACE TOP
  COORDINATES
    0.d0 0.d0 200.d0
    10.d0 10.d0 200.d0
  /
END
REGION bottom
  FACE BOTTOM
  COORDINATES
    0.d0  0.d0  0.d0 
    10.d0  10.d0  0.d0 
  /
END
#=========================== flow conditions ==================================

FLOW_CONDITION initial
  TYPE
    LIQUID_PRESSURE DIRICHLET
    CO2_MASS_FRACTION DIRICHLET
    SALT_MASS_FRACTION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  LIQUID_PRESSURE 1.2d7
  CO2_MASS_FRACTION 0.d0 
  SALT_MASS_FRACTION 4.75d-2
  TEMPERATURE 20.d0
END

FLOW_CONDITION boundary
  TYPE
    LIQUID_PRESSURE DIRICHLET
    CO2_MASS_FRACTION DIRICHLET
    SALT_MASS_FRACTION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  LIQUID_PRESSURE 1.2d7
  CO2_MASS_FRACTION 0.d0
  SALT_MASS_FRACTION 4.75d-2
  TEMPERATURE 20.d0
END

FLOW_CONDITION injection
  TYPE
    RATE MASS_RATE
    TEMPERATURE DIRICHLET
  /
  TEMPERATURE 20.d0
  RATE 0.d0 1.d6 0.d0 0.d0 kg/y kg/y kg/y MW
END


#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION all
  FLOW_CONDITION initial
  REGION all
END

BOUNDARY_CONDITION top
  FLOW_CONDITION boundary
  REGION top
END

WELL_COUPLER injection
  FLOW_CONDITION injection
  WELL well1
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

STRATA
  MATERIAL soil1
  REGION well
  WELL
END

#=========================== convergence criteria  ============================
END_SUBSURFACE
