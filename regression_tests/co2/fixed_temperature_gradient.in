SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE SCO2
      OPTIONS
        FIXED_TEMPERATURE_GRADIENT
      /
    /
  /
END

SUBSURFACE

REGRESSION
  CELL_IDS
    1
    2
    10
  /
  VARIABLES
    LIQUID_PRESSURE
    GAS_PRESSURE
    GAS_SATURATION
    TEMPERATURE
  /
END

NUMERICAL_METHODS flow

  NEWTON_SOLVER
    USE_INFINITY_NORM_CONVERGENCE
    NUMERICAL_JACOBIAN
    MINIMUM_NEWTON_ITERATIONS 2
  END

  LINEAR_SOLVER
    SOLVER DIRECT
  END

  TIMESTEPPER FLOW
    TIMESTEP_MAXIMUM_GROWTH_FACTOR 1.15
  END

END

#=========================== discretization ===================================
GRID
  TYPE STRUCTURED CARTESIAN
  NXYZ 1 1 10 
  BOUNDS
    0. 0. 0.
    1. 1. 100.
  /
END

#=========================== fluid properties =================================
FLUID_PROPERTY
  PHASE LIQUID
  DIFFUSION_COEFFICIENT 2.d-9
END

FLUID_PROPERTY
  PHASE GAS
  DIFFUSION_COEFFICIENT 2.d-5
END

#=========================== more fluid properties ============================
EOS WATER
  DENSITY IF97
  ENTHALPY IF97
  STEAM_DENSITY IF97
  STEAM_ENTHALPY IF97
  SATURATION_PRESSURE IF97
END

EOS GAS
  CO2_DATABASE co2_sw-20C-50MPa-small.dat
  HENRYS_CONSTANT DEFAULT
END

#=========================== material properties ==============================
MATERIAL_PROPERTY soil1
  ID 1
  CHARACTERISTIC_CURVES default
  POROSITY 0.12
  TORTUOSITY 1.d0
  ROCK_DENSITY 2650.d0
  THERMAL_CONDUCTIVITY_DRY 2.d0 
  THERMAL_CONDUCTIVITY_WET 2.18d0 
  HEAT_CAPACITY 1000 J/kg-C
  PERMEABILITY
    PERM_ISO 1.d-13
  /
  SOIL_COMPRESSIBILITY_FUNCTION LINEAR
  SOIL_COMPRESSIBILITY 4.5d-10
  SOIL_REFERENCE_PRESSURE 1.d7
END

#=========================== characteristic curves ============================

CHARACTERISTIC_CURVES default
  SATURATION_FUNCTION VG_STOMP
    N 1.84162
    OVEN_DRIED_CAP_HEAD 102108.2d0
    ALPHA 5.d-1
    LIQUID_RESIDUAL_SATURATION 0.d0
    #MAX_CAPILLARY_PRESSURE 1.d9
    MAX_TRAPPED_GAS_SAT 0.d0
  /
  PERMEABILITY_FUNCTION MUALEM_VG_LIQ
    PHASE LIQUID
    M 0.457
    LIQUID_RESIDUAL_SATURATION 0.3
  /
  PERMEABILITY_FUNCTION MODIFIED_COREY_GAS
    PHASE GAS
    LIQUID_RESIDUAL_SATURATION 0.3
    GAS_RESIDUAL_SATURATION 0.05
  /
END

#=========================== times ============================================
TIME
  FINAL_TIME 1. d
  INITIAL_TIMESTEP_SIZE 1. s
  MAXIMUM_TIMESTEP_SIZE 1. d
END

#=========================== regions ==========================================
REGION all
  INFINITE
END

REGION bottom
  FACE BOTTOM
  COORDINATES
    0.d0  0.d0  0.d0 
    1.d0  1.d0  0.d0 
  /
END

REGION well
  COORDINATE 0.5 0.5 10.
END

#=========================== flow conditions ==================================
FLOW_CONDITION initial
  TYPE
    LIQUID_PRESSURE HYDROSTATIC
    CO2_MASS_FRACTION DIRICHLET
    SALT_MASS_FRACTION DIRICHLET
    TEMPERATURE DIRICHLET
  /
  DATUM 0. 0. 100.
  GRADIENT
    TEMPERATURE 0. 0. -.1
  /
  LIQUID_PRESSURE 1.d7
  CO2_MASS_FRACTION 0.d0 
  SALT_MASS_FRACTION 1.5d-1
  TEMPERATURE 15.5d0
END

FLOW_CONDITION injection
  TYPE
    RATE MASS_RATE
  /
  RATE 0.d0 0.1d0 0.d0 0.d0 kg/s kg/s kg/s MW
# or for list
skip
  RATE LIST
    TIME_UNITS s
    DATA_UNITS kg/s kg/s kg/s MW
    0. 0.d0 0.1d0 0.d0 0.d0
  /
noskip
END


#=========================== condition couplers ===============================
# initial condition
INITIAL_CONDITION all
  FLOW_CONDITION initial
  REGION all
END

SOURCE_SINK well
  FLOW_CONDITION injection
  REGION well
END

BOUNDARY_CONDITION bottom
  FLOW_CONDITION initial
  REGION bottom
END

#=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil1
END

#=========================== convergence criteria  ============================
END_SUBSURFACE
