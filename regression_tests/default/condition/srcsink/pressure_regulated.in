#Description: 1D vertical injection scenario

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
  /
END

SUBSURFACE

EXTERNAL_FILE pressure_regulated.txt

#=========================== regression =======================================
REGRESSION
  CELL_IDS
    13
  /
  VARIABLES
    LIQUID_PRESSURE
  /
END

#=========================== times ============================================
TIME
  FINAL_TIME 0.1d0 y
  INITIAL_TIMESTEP_SIZE 1.d0 s
  MAXIMUM_TIMESTEP_SIZE 5.d-2 y
END

#=========================== regions ==========================================
REGION injection_cell
  COORDINATE 2.5 0.5 2.5
END

#=========================== flow conditions ==================================
FLOW_CONDITION injection_well
  TYPE
    RATE PRESSURE_REGULATED_MASS_RATE VOLUME
  /
  THRESHOLD_PRESSURE PREVENT_FLOW_BELOW 0.9d6
  THRESHOLD_PRESSURE_SPAN 1.d4
  RATE -4.d-4 kg/s
END

#=========================== src/sink sandbox =================================
skip
SOURCE_SINK_SANDBOX
  PRESSURE
    REGION injection_cell
    PHASE LIQUID
    INHIBIT_FLOW_BELOW_PRESSURE
    PRESSURE 0.9d6
    SCALE_MAXIMUM_MASS_RATE
    MAXIMUM_MASS_RATE -4.d-4 kg/s
  /
END
noskip

SOURCE_SINK
  FLOW_CONDITION injection_well
  REGION injection_cell
END

END_SUBSURFACE
