! Test Case #2+3.  Horizontal one-dimensional infiltration.
! For more descriptions of the problem please read case_2+3.docx

SIMULATION
  SIMULATION_TYPE SUBSURFACE
  PROCESS_MODELS
    SUBSURFACE_FLOW flow
      MODE RICHARDS
    /
  /
END

SUBSURFACE

!=========================== flow mode ========================================
REGRESSION
  CELL_IDS
    5
    15
    25
    35
  /
END

!=========================== discretization ===================================
GRID
  TYPE structured
  NXYZ 40 1 1    ! 1D PROBLEM
  DXYZ
    40*0.005
    1.d0
    1.d0
  /
END

!=========================== material properties ==============================
MATERIAL_PROPERTY soil
  ID 1
  POROSITY 0.45d0
  TORTUOSITY 1.0d0
  CHARACTERISTIC_CURVES sf1
!  SATURATION_FUNCTION sf1
  PERMEABILITY
    PERM_ISO 1.18d-14
  /
END

!=========================== saturation functions =============================
skip
SATURATION_FUNCTION sf1
  SATURATION_FUNCTION_TYPE LINEAR_MODEL
  PERMEABILITY_FUNCTION_TYPE BURDINE
  RESIDUAL_SATURATION 0.3333d0
  LAMBDA 7.d-1
  MAX_CAPILLARY_PRESSURE 9.807d3
  ALPHA 1.d20
END
noskip

CHARACTERISTIC_CURVES sf1
  SATURATION_FUNCTION LINEAR
    LIQUID_RESIDUAL_SATURATION 0.3333333d0
    ALPHA 1.d30
    MAX_CAPILLARY_PRESSURE 9807.0
  /
  PERMEABILITY_FUNCTION BURDINE_LINEAR_LIQ
    LIQUID_RESIDUAL_SATURATION 0.3333333d0
  /
  PERMEABILITY_FUNCTION BURDINE_LINEAR_GAS
    LIQUID_RESIDUAL_SATURATION 0.33333333d0
    GAS_RESIDUAL_SATURATION 0.0D0
  /
END

EOS WATER
  DENSITY CONSTANT 997.16d0
  ENTHALPY CONSTANT 1.8890d0
  VISCOSITY CONSTANT 1.d-3
END

!=========================== output options ===================================
OUTPUT
!  FORMAT TECPLOT POINT
  FORMAT HDF5
  TIMES s 0 864 5184 9504
END

!=========================== times ============================================
TIME
  FINAL_TIME 9.504d3 s
  MAXIMUM_TIMESTEP_SIZE 1.d3 s
END

!=========================== regions ==========================================
REGION all
  COORDINATES
    0.d0 0.d0 0.d0
    2.d-1 1.d0 1.d0
  /
END

REGION left
  COORDINATES
    0.d0 0.d0 0.d0
    0.d0 1.d0 1.d0
  /
  FACE WEST
END

REGION first
  COORDINATES
    0.d0 0.d0 0.d0
    0.000001 1.d0 1.d0
  /
END

REGION right
  COORDINATES
    2.d-1 0.d0 0.d0
    2.d-1 1.d0 1.d0
  /
  FACE EAST
END

!=========================== flow conditions ==================================
FLOW_CONDITION left
  TYPE
    SATURATION dirichlet
  /
  SATURATION 1.d0
END

FLOW_CONDITION initial_sat
  TYPE
    SATURATION DIRICHLET
  /
  SATURATION 0.4444d0
END

!=========================== condition couplers ===============================
! initial condition
INITIAL_CONDITION
  FLOW_CONDITION initial_sat
  REGION all
END

BOUNDARY_CONDITION
  FLOW_CONDITION left
  REGION left
END

!=========================== stratigraphy couplers ============================
STRATA
  REGION all
  MATERIAL soil
END

END_SUBSURFACE
